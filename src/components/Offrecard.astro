---
const { offre } = Astro.props;
---

<article
    class={`offre-card rounded-xl border-2 border-indigo-950 p-5 shadow-sm transition-all
    ${offre.favori ? "bg-indigo-100" : "bg-gray-100"}`}
    data-favori={offre.favori.toString()}
>
    <header class="flex items-start justify-between gap-4">
        <div>
            <h2 class="text-lg font-semibold text-indigo-950">
                {offre.nomMaison}
            </h2>
            <p class="mt-1 text-sm text-slate-600">
                {offre.adresse}
            </p>
        </div>

        <button
            type="button"
            class={`favori-toggle inline-flex items-center justify-center rounded-lg px-4 py-2 text-sm font-semibold transition-colors
            ${offre.favori ? "bg-indigo-800 text-white" : "bg-slate-200 text-indigo-950"}`}
        >
            {offre.favori ? "Favori" : "Standard"}
        </button>
    </header>

    <div class="mt-4 flex flex-wrap gap-4 text-sm text-slate-700">
        <span>{offre.nbChambres} chambres</span>
        <span>{offre.nbSdb} sdb</span>
        <span>{offre.surface} m²</span>
        <span class="font-semibold text-indigo-950">
            {offre.prix} €
        </span>
    </div>
</article>
